                                    <form method="post" asp-page-handler="UpdateThuoc" id="editThuocForm">
                                        @* Anti-forgery token được thêm tự động *@
                                        <input type="hidden" asp-for="ThuocUpdate.IdThuoc" />
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Tên Thuốc</label>
                                                    <input asp-for="ThuocUpdate.TenThuoc" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Danh Mục</label>
                                                    <input asp-for="ThuocUpdate.IdDm" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Xuất Xứ</label>
                                                    <input asp-for="ThuocUpdate.IdXx" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
