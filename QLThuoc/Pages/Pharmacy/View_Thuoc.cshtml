                    <!-- Script điền dữ liệu vào form modal -->
                    <script>
                        function populateEditForm(id, ten, idDm, idXx, idDvt, soLuong, giaNhap, donGia, thanhPhan) {
                            // Gán dữ liệu vào các input qua các name tương ứng với binding của ThuocUpdate
                            document.querySelector('[name="ThuocUpdate.IdThuoc"]').value = id;
                            document.querySelector('[name="ThuocUpdate.TenThuoc"]').value = ten;
                            document.querySelector('[name="ThuocUpdate.IdDm"]').value = idDm;
                            document.querySelector('[name="ThuocUpdate.IdXx"]').value = idXx;
                            document.querySelector('[name="ThuocUpdate.IdDvt"]').value = idDvt;
