                                                    <label class="form-label">Giá Nhập</label>
                                                    <input asp-for="ThuocUpdate.GiaNhap" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Đơn Giá</label>
                                                    <input asp-for="ThuocUpdate.DonGia" class="form-control" />
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="mb-3">
                                                    <label class="form-label">Thành Phần</label>
                                                    <textarea asp-for="ThuocUpdate.ThanhPhan" class="form-control" rows="4"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
