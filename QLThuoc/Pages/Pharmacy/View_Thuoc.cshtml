                    <!-- Hiển thị danh sách thuốc -->
                    <div class="row">
                        <div class="col-12 mt-4">
                            <div class="table-responsive shadow rounded">
                                <table class="table table-center bg-white mb-0">
                                    <thead>
                                        <tr>
                                            <th class="border-bottom p-3">STT</th>
                                            <th class="border-bottom p-3">Mã Thuốc</th>
                                            <th class="border-bottom p-3">Tên Thuốc</th>
                                            <th class="border-bottom p-3">Danh Mục</th>
                                            <th class="border-bottom p-3">Xuất Xứ</th>
                                            <th class="border-bottom p-3">Đơn Vị Tính</th>
                                            <th class="border-bottom p-3">Số lượng tồn</th>
                                            <th class="border-bottom p-3">Đơn Giá</th>
                                            <th class="border-bottom p-3">Hạn Sử Dụng</th>
                                            <th class="border-bottom p-3">Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int stt = 1;
                                        }
                                        @if (Model.DanhSachThuoc != null)
                                        {
                                            @foreach (var thuoc in Model.DanhSachThuoc)
                                            {
                                                <tr>
                                                    <td class="p-3">@stt</td>
                                                    <td class="p-3">@thuoc.IdThuoc</td>
                                                    <td class="p-3">@thuoc.TenThuoc</td>
                                                    <td class="p-3">@thuoc.IdDmNavigation.Ten</td>
                                                    <td class="p-3">@thuoc.IdXxNavigation.Ten</td>
                                                    <td class="p-3">@thuoc.IdDvtNavigation.Ten</td>
                                                    <td class="p-3">@thuoc.SoLuongTon</td>
                                                    <td class="p-3">@thuoc.DonGia.ToString("N0") VND</td>
                                                    <td class="p-3">@thuoc.HanSuDung.ToString("dd/MM/yyyy")</td>
                                                    <td class="text-end p-3">
                                                        <!-- Nút xem thông tin (nếu có) -->
                                                        <a href="#" class="btn btn-icon btn-pills btn-soft-primary" data-bs-toggle="modal" data-bs-target="#viewprofile" onclick="showThuocInfo('@thuoc.IdThuoc', '@thuoc.TenThuoc', '@thuoc.ThanhPhan', '@thuoc.DonGia.ToString("N0") VND')">
                                                            <i class="uil uil-eye"></i>
                                                        </a>
                                                        <!-- Nút chỉnh sửa: chuyển dữ liệu vào form modal -->
                                                        <a href="#" class="btn btn-icon btn-pills btn-soft-success"
                                                           onclick="populateEditForm('@thuoc.IdThuoc', '@thuoc.TenThuoc', '@thuoc.IdDm', '@thuoc.IdXx', '@thuoc.IdDvt', '@thuoc.SoLuongTon', '@thuoc.GiaNhap', '@thuoc.DonGia', '@thuoc.ThanhPhan')">
                                                            <i class="uil uil-pen"></i>
                                                        </a>
                                                        <a href="#" class="btn btn-icon btn-pills btn-soft-danger"><i class="uil uil-trash"></i></a>
                                                    </td>
                                                </tr>
                                                stt++;
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="10" class="text-center">Không có dữ liệu</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
